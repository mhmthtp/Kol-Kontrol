<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:onClick="mainBtnClick"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:onClick="mainBtnClick"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@+id/button1"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:onClick="mainBtnClick"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:onClick="mainBtnClick"
        android:layout_marginTop="275dp"
        android:layout_toRightOf="@+id/button3"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:onClick="mainBtnClick"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:onClick="mainBtnClick"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@+id/button5"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:onClick="mainBtnClick"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:onClick="mainBtnClick"
        android:layout_marginTop="425dp"
        android:layout_toRightOf="@+id/button7"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000080"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewMerkez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0006"
        android:gravity="center"
        android:text="MERKEZ MOTOR" />

    <TextView
        android:id="@+id/textViewSol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textColor="#ff0006"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SOL MOTOR" />

    <TextView
        android:id="@+id/textViewSag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:textColor="#ff0006"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SAG MOTOR" />

    <TextView
        android:id="@+id/textViewPence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:textColor="#ff0006"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="PENCE MOTOR" />


</RelativeLayout>